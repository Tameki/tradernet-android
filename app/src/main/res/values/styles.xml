<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="m">@color/lightGrey</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">@color/lightGrey</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="MainTitleText" parent="BoldText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubtitleText" parent="SemiboldText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HintText" parent="RegularText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Base styles -->
    <style name="BoldText" parent="BaseText">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="SemiboldText" parent="BaseText">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="RegularText" parent="BaseText">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="BaseText" parent="TextAppearance.AppCompat">
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>
